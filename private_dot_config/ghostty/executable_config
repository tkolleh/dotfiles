# Nightly build
auto-update-channel = tip

# The syntax is "key = value". The whitespace around the
# equals doesn't matter.
#background = 000000
#foreground = feffff
#split-divider-color = ef766d

# Cursor configuration
# cursor-style-blink
# cursor-style-blink = true

# apperance specific themes
# theme = dark:github dark,light:Raycast_Light
theme = dark:cyberdream,light:cyberdream-light

# Comments start with a `#` and are only valid on their own line.
# Blank lines are ignored!

keybind = ctrl+b>c=new_tab
keybind = ctrl+b>shift+l=next_tab
keybind = ctrl+b>shift+h=previous_tab

keybind = ctrl+b>\=new_split:right
keybind = ctrl+b>-=new_split:down

keybind = ctrl+b>h=goto_split:left
keybind = ctrl+b>j=goto_split:bottom
keybind = ctrl+b>k=goto_split:top
keybind = ctrl+b>l=goto_split:right

keybind = ctrl+b>z=toggle_split_zoom

