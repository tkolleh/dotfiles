# Nightly build
auto-update-channel = tip

# apperance specific themes
# theme = dark:github dark,light:Raycast_Light
# theme = dark:cyberdream,light:cyberdream-light
# theme = dark:catppuccin-frappe,light:catppuccin-latte
# theme = dark:GitLab-Dark-Grey,light:GitLab-Light
