// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "lsp": {
    "metals": {
      // View metals configuration options at: https://scalameta.org/metals/docs/integrations/new-editor/#metals-user-configuration
      "scalafixConfigPath": "project/.scalafix.conf",
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true
          },
          "implicitArguments": {
            "enable": false
          },
          "typeParameters": {
            "enable": false
          }
        }
      },
      "binary": {
        "arguments": ["-Dmetals.http=on"]
      },
      "initialization_options": {
        "isHttpEnabled": true
      }
    }
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  // See: https://fontdrop.info/ for more information on font features
  "buffer_font_features": {
    "calt": true,
    "subs": false,
    "sups": false,
    "zero": true
  },
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "base_keymap": "JetBrains",
  "theme": {
    "mode": "system",
    "light": "Github Light Tritanopia",
    "dark": "Github Dark Tritanopia"
  },
  "tab_size": 2,
  "vim_mode": true,
  "soft_wrap": "none",
  "show_completions_on_input": true,
  "vim": {
    // "always": use system clipboard
    // "never": don't use system clipboard
    // "on_yank": use system clipboard for yank operations
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "auto"
  },
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 10,
  "inlay_hints": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "terminal": {
    "cursor_shape": "block",
    "blinking": "terminal_controlled",
    "alternate_scroll": "off",
    "copy_on_select": true,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "env": {
      "TERM_CONTEXT": "zed_editor"
    },
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 12,
    "line_height": "comfortable",
    "option_as_meta": false,
    "button": false,
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  }
}
