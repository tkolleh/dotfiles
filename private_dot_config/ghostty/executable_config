# theme = dark:cyberdream,light:farmhouse-light
theme = dark:monrovia,light:monrovia-light

cursor-opacity = 1
cursor-style = block

unfocused-split-opacity = 0.80
split-divider-color = "#663399"

font-size = 14

# Whether to use the native macOS full screen mode.
macos-non-native-fullscreen = false

# Whether to enable saving and restoring window state. Window state 
# includes their position, size, tabs, splits, etc.
# Options are default, always, never
window-save-state = default

# Instance management
keybind = opt+cmd+t=toggle_quick_terminal

#
# Tab management
#

# keybind = ctrl+b>c=new_tab
# Use default ... cmd+t

# keybind = ctrl+b>shift+l=next_tab
keybind = opt+cmd+l=next_tab

# keybind = ctrl+b>shift+h=previous_tab
keybind = opt+cmd+h=previous_tab

#
# Pane/Split management
#

# keybind = ctrl+b>z=toggle_split_zoom
keybind = opt+cmd+z=toggle_split_zoom

# keybind = ctrl+b>\=new_split:right
keybind = opt+cmd+\=new_split:right

# keybind = ctrl+b>-=new_split:down
keybind = opt+cmd+-=new_split:down

# keybind = ctrl+b>h=goto_split:left
keybind = opt+cmd+h=goto_split:left

# keybind = ctrl+b>l=goto_split:right
keybind = opt+cmd+l=goto_split:right

# keybind = ctrl+b>j=goto_split:bottom
keybind = opt+cmd+j=goto_split:bottom

# keybind = ctrl+b>k=goto_split:top
keybind = opt+cmd+k=goto_split:top
