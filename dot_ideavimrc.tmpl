source {{ .chezmoi.homeDir }}/.config/nvim/_alt_init.vim

set visualbell
set noerrorbells
set surround
set commentary
set ideajoin
set NERDTree
set which-key

" disable the timeout option
" set notimeout

" increase the timeoutlen (default: 1000)
set timeoutlen = 3000

" Use system clipboard
set clipboard+=unnamed

" Open nerd tree in intellij. Same as nvim file explorer mapping
"
nnoremap <Leader>e :NERDTreeFind<CR>

" Open project view with file selected
" nnoremap <Leader>- :action SelectInProjectView<CR>

nnoremap <Leader>rn :action RenameElement<CR>
nnoremap <Leader>fp :action Tool_External Tools_darker<CR>

" similar to nvim dap configuration
"
nnoremap <Leader>b :action ToggleLineBreakpoint<CR>
" nnoremap <Leader>dl :action EditorPopupMenuDebug<CR>


nnoremap <Leader><C-h> :action TypeHierarchy<CR>

" gitgutter mapping
" Unlike gitgutter Jumps are based on timeline not line number in file
"
nnoremap ]c :action VcsShowNextChangeMarker<CR>
nnoremap [c :action VcsShowPrevChangeMarker<CR>

"nnoremap ]c :action Diff.NextChange<CR>
"nnoremap [c :action Diff.PrevChange<CR>


" nvim-lsp configu mappings
"
" Go to references
nnoremap gr :action FindUsages

