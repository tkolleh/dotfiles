[user]
  name = {{ .chezmoi.username }}
  {{ if (eq .chezmoi.hostname "bluewhale" ) }}
  email = {{ index ((index (lastpass "5433460393394439843") 0).note) "work" | trim }}
  {{ else }}
  email = {{ index ((index (lastpass "5433460393394439843") 0).note) "original" | trim }}
  signingkey = {{ (index (lastpass "3492591893907884721") 0).note.signingkey | trim }}
  {{ end }}
[color]
  branch = auto
  diff = true
  status = always
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	excludesfile = {{ .chezmoi.homedir }}.gitignore_global
	autocrlf = input
  pager = delta
	editor = nvim
[push]
  default = simple
[interactive]
    diffFilter = delta --color-only

[delta]
    features = unobtrusive-line-numbers decorations
    whitespace-error-style = 22 reverse
    syntax-theme = Solarized (dark)

[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#444444"
    line-numbers-zero-style = "#444444"
    line-numbers-plus-style = "#444444"
    line-numbers-left-format = "{nm:>4}┊"
    line-numbers-right-format = "{np:>4}│"
    line-numbers-left-style = blue
    line-numbers-right-style = blue

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = yellow box

[credential "https://*.amazonaws.com"]
  helper = !aws --profile git-rus codecommit credential-helper $@
  UseHttpPath = true

[difftool "kdiff3"]
  prompt = false
	path = /Applications/kdiff3.app
  trustExitCode = false
[mergetool "kdiff3"]
  prompt = false
	path = /Applications/kdiff3.app
  trustExitCode = false

[mergetool "vimdiff"]
  prompt = true
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "fugitive"]
  prompt = true
	cmd = nvim -f -c \"Gvdiffsplit\" \"$LOCAL\" \"$REMOTE\"
[mergetool "fugitive"]
  prompt = true
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

[merge]
  tool = fugitive
  guitool = kdiff3
[diff]
  tool = fugitive
  guitool = kdiff3

[init]
	templatedir = ~/.git_template
[gpg]
	program = /usr/local/bin/gpg
[tag]
	gpgsign = true
