[user]
  name = {{ .chezmoi.username }}
  {{ if (eq .chezmoi.hostname "bluewhale" ) }}
  email = {{ index ((index (lastpass "5433460393394439843") 0).note) "work"}}
  {{ else }}
  email = {{ index ((index (lastpass "5433460393394439843") 0).note) "original"}}
  {{ end }}
  signingkey = {{ (index (lastpass "3492591893907884721") 0).note.signingkey }}
[color]
  branch = auto
  diff = true
  status = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	excludesfile = {{ .chezmoi.homedir }}.gitignore_global
	autocrlf = input
	editor = nvim
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
  default = simple
[credential "https://*.amazonaws.com"]
  helper = !aws --profile git-rus codecommit credential-helper $@
  UseHttpPath = true
[mergetool "vimdiff"]
  prompt = true
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "fugitive"]
  prompt = true
	cmd = nvim -f -c \"Gvdiffsplit\" \"$LOCAL\" \"$REMOTE\"
[mergetool "fugitive"]
  prompt = true
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

[mergetool]
  prompt = true
[difftool]
  prompt = true
[merge]
  tool = fugitive
  guitool = sourcetree
[diff]
  tool = fugitive
  guitool = sourcetree
[init]
	templatedir = ~/.git_template
[gpg]
	program = /usr/local/bin/gpg
[tag]
	gpgsign = true
